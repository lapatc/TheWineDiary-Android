<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >
    
    <ImageView
        android:id="@+id/wineList_thumbnail" 
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_margin="8dp"
        android:layout_alignParentLeft="true"
        />
    
    <TextView
        android:id="@+id/wineList_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:layout_toRightOf="@id/wineList_thumbnail"
        android:textSize="22sp"
        android:textStyle="bold"
        />
    
    <TextView
        android:id="@+id/wineList_winery"
        android:layout_margin="8dp"
        android:layout_height="wrap_content"
        android:layout_width ="wrap_content"
        android:layout_below="@id/wineList_name"
        android:layout_toRightOf="@id/wineList_thumbnail"
        android:textSize="18sp" 
        />
    
    <TextView
        android:id="@+id/wineList_Location"
        android:layout_margin="8dp"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_below="@id/wineList_winery"
        android:layout_toRightOf="@id/wineList_thumbnail"
        android:textSize="18sp"
        android:textStyle="italic"
        />
    

</RelativeLayout>
